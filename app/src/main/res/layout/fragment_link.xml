<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    tools:context=".LinkFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/figtree_bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_btback"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="16dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/link_back"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning"
                android:fontFamily="@font/figtree_regular"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="33dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajay Manva"
                    android:fontFamily="@font/figtree_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:textSize="24sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hand"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:layout_marginTop="24dp"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                style="@style/CustomHorizontalScrollView"

                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="8dp"
                        android:background="@drawable/mid_boxes">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_todays_clicks"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="76dp"/>
                        <TextView
                            android:id="@+id/tvTodaysClicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/figtree_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's clicks"
                            android:fontFamily="@font/figtree_regular"
                            android:textSize="14sp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="12dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="8dp"
                        android:background="@drawable/mid_boxes">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_top_location"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="76dp"/>
                        <TextView
                            android:id="@+id/tvTopLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pune"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/figtree_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top location"
                            android:fontFamily="@font/figtree_regular"
                            android:textSize="14sp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="12dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="8dp"
                        android:background="@drawable/mid_boxes">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_top_source"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="76dp"/>
                        <TextView
                            android:id="@+id/tvTopSource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instagram"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/figtree_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top source"
                            android:fontFamily="@font/figtree_regular"
                            android:textSize="14sp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="12dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="8dp"
                        android:background="@drawable/mid_boxes">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_total_clicks"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="76dp"/>
                        <TextView
                            android:id="@+id/tvTotalClicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1500"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/figtree_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total clicks"
                            android:fontFamily="@font/figtree_regular"
                            android:textSize="14sp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="12dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:elevation="8dp"
            android:clickable="true"
            app:cardBackgroundColor="#D8D8D8"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="80.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Analytics"
                android:textSize="16sp"
                android:fontFamily="@font/figtree_bold"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="121.5dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btTopLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Links"
                android:textSize="16sp"
                android:clickable="true"
                android:fontFamily="@font/figtree_bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_shape"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/btRecentLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Links"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:clickable="true"
                android:fontFamily="@font/figtree_bold"/>

             <ImageView
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:src="@drawable/ic_search_icon"
                 android:layout_marginRight="16dp"
                 android:layout_marginLeft="40dp"/>



        </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="28dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                android:elevation="8dp"
                android:clickable="true"
                app:cardBackgroundColor="#D8D8D8"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_links"
                    android:layout_marginLeft="80.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All Links"
                    android:textSize="16sp"
                    android:fontFamily="@font/figtree_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="121.5dp"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/ic_wsp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/ic_faq"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="40dp"/>

        </LinearLayout>
    </ScrollView>





</FrameLayout>